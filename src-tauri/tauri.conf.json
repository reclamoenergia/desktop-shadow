{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Wind Shadow Studio",
  "version": "0.1.0",
  "identifier": "com.windshadow.studio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "externalBin": ["../engine/dist/engine"]
  },
  "app": {
    "windows": [
      {
        "title": "Wind Shadow Studio",
        "width": 1400,
        "height": 900
      }
    ]
  }
}
